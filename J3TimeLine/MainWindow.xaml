<Window x:Class="J3TimeLine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:J3TimeLine"
        mc:Ignorable="d"
        Title="时间轴v1.0肉肉子无敌版" Height="200" Width="300">
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="00:00" Name="timeLabel"/>
            <Button Grid.Column="1" Content="Start" Click="startButtonClicked" Name="startButton"/>
            <Button Grid.Column="2" Content="Capture" Click="captureButtonClicked" Name="captureButton"/>
        </Grid>
        <ListBox Grid.Row="1" Margin="3" Name="lstMessage">
        </ListBox>
    </Grid>
</Window>
